<!-- main content -->
    <div id="content">
      <article>
        <h2>Lista de Libros</h2>
        <hr size="6" noshade>
    <table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Editorial</th>
      <th>Autor</th>
      <th>ISBN</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libros.each do |libro| %>
      <tr>
        <td><%= libro.nombre %></td>
        <td><%= libro.editorial %></td>
        <td><%= libro.autor %></td>
        <td><%= libro.isbn %></td>
        <td>$<%= libro.precio %>0</td>
        <td><%= link_to 'Ver', libro %></td>
        <td><%= link_to 'Editar', edit_libro_path(libro) %></td>
        <td><%= link_to 'Borrar', libro, method: :delete, data: { confirm: 'Â¿Estas Seguro?' } %></td>
       
        </tr>
    
    <% end %>
  </tbody>
      <%= link_to 'Agregar Libro Nuevo', new_libro_path %>
</table>
    </article>
    <!-- / content body -->
  






                        
            